<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="webshopapps_matrixrate" resource="default" engine="innodb" comment="Webshopapps Matrixrate">
        <column xsi:type="int" name="pk" padding="11" unsigned="true" nullable="false" identity="true" comment="Primary key"/>
        <column xsi:type="smallint" name="website_id" nullable="false" default="0" comment="Website Id"/>
        <column xsi:type="varchar" name="dest_country_id" nullable="false" length="4" default="0" comment="Destination coutry ISO/2 or ISO/3 code"/>
        <column xsi:type="smallint" name="dest_region_id" nullable="false" default="0" comment="Destination Region Id"/>
        <column xsi:type="varchar" name="dest_city" nullable="false" length="30" default="" comment="Destination City"/>
        <column xsi:type="varchar" name="dest_zip" nullable="false" length="10" default="*" comment="Destination Post Code (Zip)"/>
        <column xsi:type="varchar" name="dest_zip_to" nullable="false" length="10" default="*" comment="Destination Post Code To (Zip)"/>
        <column xsi:type="varchar" name="condition_name" nullable="false" length="20" comment="Rate Condition name"/>
        <column xsi:type="decimal" name="condition_from_value" scale="4" precision="12" unsigned="false" nullable="false" default="0.0000" comment="Rate condition from value"/>
        <column xsi:type="decimal" name="condition_to_value" scale="4" precision="12" unsigned="false" nullable="false" default="0.0000" comment="Rate condition to value"/>
        <column xsi:type="decimal" name="price" scale="4" precision="12" unsigned="false" nullable="false" default="0.0000" comment="Price"/>
        <column xsi:type="decimal" name="cost" scale="4" precision="12" unsigned="false" nullable="false" default="0.0000" comment="Cost"/>
        <column xsi:type="varchar" name="shipping_method" nullable="false" length="255" comment="Shipping Method"/>
        <column xsi:type="datetime" name="start_date" on_update="false" nullable="true" default="0" comment="Active From"/>
        <column xsi:type="datetime" name="end_date" on_update="false" nullable="true" default="0" comment="Active Until"/>
        <column xsi:type="varchar" name="method_code" nullable="false" length="100" default="" comment="Method Code"/>
        <column xsi:type="timestamp" name="update_time" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Update Time Auto"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="pk"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="webshopapps_matrixrate">
            <column name="website_id"/>
            <column name="dest_country_id"/>
            <column name="dest_region_id"/>
            <column name="dest_city"/>
            <column name="dest_zip"/>
            <column name="condition_name"/>
            <column name="condition_from_value"/>
            <column name="condition_to_value"/>
            <column name="shipping_method"/>
        </constraint>
    </table>
</schema>
